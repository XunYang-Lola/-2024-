    font-size: 17px;
   border-bottom: 2px solid #c0c0c0;

}
.wrapper .input-data1 label{
    position: absolute;
    bottom: 0px;
    left: 0;
    color: #808080;
    /*这个属性可以使点击label穿透到输入框*/
    pointer-events: none;
    /*动画过渡*/
transition: all 0.3s ease;
}
.wrapper .input-data1 .underline{
    position: absolute;
    bottom: 0;
    height: 2px;
    width: 100%;
background-color: #2c6fdb;
transform: scaleX(0);
/*同样给动画加个过渡*/

}
.wrapper .input-data1 input:focus~ .underline,
.wrapper .input-data1 input:valid~ .underline{
    /*沿X轴放大*/
    transform: scaleX(1);
}




